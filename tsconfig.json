{
  "compilerOptions": {
    "noEmit": true,
    "module": "commonjs",
    "target": "ES2020",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    // "listFiles": true,
    // "noErrorTruncation": true,

    "esModuleInterop": true,
    "diagnostics": true
  },
  "include": [
    "js/**/*.js",
    "tests/**/*.js",
    "js/types/**/*.d.ts",
    ".github/**/*.js",
    "third_party/**/*.js",
  ],
  "exclude": [
    "**/dist/*.js"
  ],
}
